{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NestJS App",
            "type": "pwa-node",
            "request": "launch",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "outFiles": []
        }
    ]
}